<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=Heading%></title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="menu-container">
        <div class="menu" id="File">File</div>
        <div class="menu" id="Home">Home</div>
    </div>
<!-- *****************************menu-options************************************************************************ -->
    <div class="menu-option-container">
        <div class="menu-options " id="File-menu-options">

            <div id="New">New</div>
            <div id="Open">Open</div>
            <div id="Save">Save</div>
        </div>
        <div class="menu-options" id="Home-menu-options">

            <div class="menu-group">
                <div class="menu-row" id="mr1">

                    <select name="" id="font-family">
                        <option value="Arial">Arial</option>
                        <option value="Cambria">Cambria</option>
                        <option value="Georgia">Georgia</option>
                        <option value="monospace">monospace</option>
                        <option value="sans-serif">sans-serif</option>
                    </select>

                    <select name="" id="font-size">
                        <option value="10">10</option>
                        <option value="12">12</option>
                        <option value="14">14</option>
                        <option value="16">16</option>
                        <option value="18">18</option>
                        <option value="22">22</option>
                    </select>
                </div>
                <div class="menu-row">
                    <input type="button" id="bold" value="B">
                    <input type="button" id="underline" value="U">
                    <input type="button" id="italic" value="I">
                    <input type="color" id="bg-color" value="white">
                    <input type="color" id="text-color" value="gray">
                </div>
            </div>
            <div class="menu-group2">
                <input type="button" value="L" halign="left">
                <input type="button" value="C" halign="center">
                <input type="button" value="R" halign="right">
            </div>
        </div>
    </div>
    
    <div  class="formula-container">
        Cell
        <input type="text" id = "address-input">
        Formula:
        <input type="text" id="formula-input">
    </div>
    <div class="content-container">
        <div id="top-left-cell" class="top-left-cell"></div>
        <div id="top-row" class="top-row">
            <%for(let k=0;k<col;k++){%>
                <div class="cell">
                    <%=String.fromCharCode(k+65)%>
                </div>
            <%}%>
        </div>
        <div id="left-col" class="left-col">
            <%for(let k=1;k<=row;k++){%>
                <div class="cell">
                    <%=k%>
                </div>
            <%}%> 
        </div>
        <div id="grid" class="grid">
                <%for(let i=0;i<row;i++){%>
            <div class="row" >
                <%for(let j=0;j<col;j++){%>
                <div class="cell" contenteditable="true" r-id= <%=i%> c-id=<%=j%>>
                    <!-- <%= i+"-"+j%> -->
                </div>
                <%}%>
            </div>
        <%}%>
        </div>
    </div>
    <div class="sheets-container">Sheets</div>
    
</body>
<script src="script.js"></script>
</html>